extends ../main

block content
	// ====== main content =======
	main.main

		// ====== carousel_new =======
		.carousel.carousel_new
			._container
				.owl-carousel.owl-carousel_new(data-type="new")

					.carousel__item
						._row.carousel__item-inner
							.carousel__item-left
								.carousel__item-title
									p сувениры, подарки, предметы интерьера
									.carousel__item-mark New
								.carousel__item-text Керамические горшочки для цветов в виде принцесс-лягушек станут отличным дополнением интерьера и красивым элементом домашнего декора
							.carousel__item-right
								.carousel__item-img-holder
									img.carousel__item-img(src="img/photos/photo_new_1.jpg" alt="photo")

					.carousel__item
						._row.carousel__item-inner
							.carousel__item-left
								.carousel__item-title
									p сувениры, подарки, предметы интерьера
									.carousel__item-mark New
								.carousel__item-text Керамические горшочки для цветов в виде принцесс-лягушек станут отличным дополнением интерьера и красивым элементом домашнего декора
							.carousel__item-right
								.carousel__item-img-holder
									img.carousel__item-img(src="img/photos/photo_new_1.jpg" alt="photo")

		// ====== carousel_category =======
		.carousel.carousel_category
			.owl-carousel.owl-carousel_category(data-type="category")

				.carousel__item
					.carousel__item-img-holder
						img.carousel__item-img(src="img/category/category-1.jpg")
					.carousel__item-title



